    do script "cd ~/git/ESP32-Faikin/ESP;get_idf;./bulk /dev/cu.usbmodem612201"
end tell'
osascript -e 'tell app "Terminal"
    do script "cd ~/git/ESP32-Faikin/ESP;get_idf;./bulk /dev/cu.usbmodem612301"
end tell'
osascript -e 'tell app "Terminal"
    do script "cd ~/git/ESP32-Faikin/ESP;get_idf;./bulk /dev/cu.usbmodem612401"
end tell'
